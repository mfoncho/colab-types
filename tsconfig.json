{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext", 
        "jsx": "preserve",                     
        "outDir": "./lib",
        "sourceMap": true,
        "strict": true,                           
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node", 
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"]
}
